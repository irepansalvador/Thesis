file = {:home/irsalvad/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Neme, Tautz - 2013 - Phylogenetic patterns of emergence of new genes support a model of frequent de novo evolution.pdf:pdf},
issn = {1471-2164},
journal = {BMC Genomics},
number = {1},
pages = {117},
title = {{Phylogenetic patterns of emergence of new genes support a model of frequent de novo evolution}},
