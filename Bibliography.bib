pages = {4740--50},
pmid = {24173805},
title = {{Whole population cell analysis of a landmark-rich mammalian epithelium reveals multiple elongation mechanisms.}},
url = {http://dev.biologists.org/content/140/23/4740.short?rss=1},
volume = {140},
year = {2013}
}
